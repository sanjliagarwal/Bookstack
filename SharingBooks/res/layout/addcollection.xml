<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffd3f18f" >

    

    <EditText
        android:id="@+id/a_etname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name of the book" 
        android:textColor="#ff000000">
        </EditText>
        <TextView
        android:id="@+id/a_tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

     <EditText
        android:id="@+id/a_etauthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#ff000000"
        android:hint="Author" />

    <TextView
        android:id="@+id/a_tvauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/a_etedition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="edition(optional)"
        android:textColor="#ff000000" />

    <TextView
        android:id="@+id/a_tvedition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/a_spcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/heading_spinner" 
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/a_tvcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/a_submit"
        android:layout_width="match_parent"
        android:text="Submit"
        android:layout_height="53dp"
                android:background="@drawable/buttonimage"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

</LinearLayout>
